# Maintainer:
pkgname=py-rosdistro
_pkgname=rosdistro
pkgver=0.8.2
pkgrel=0
pkgdesc="A tool to work with rosdistro files"
url="https://pypi.python.org/pypi/rosdistro/"
arch="all"
license="BSD-3-Clause"
depends="py-argparse py-yaml"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz
  force-to-enable-alpine-platform.patch"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}
sha512sums="51e203367a68090a7ea28624897847c4796e6c95c771641ef90b24bb13fc6ff47b9d2bd702b450cffc1156a9abe74b5d1dca967727b5e4c426589559b064dfe8  rosdistro-0.8.2.tar.gz
3ede191d127b89a5a5f995cdd912d17f31914179aa5bdd860b31292fa960d899863ede091583e5dcae27c7aed66ac70bd06b4a713a79203a7d7791d252890d63  force-to-enable-alpine-platform.patch"
