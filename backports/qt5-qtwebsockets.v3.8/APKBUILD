# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=qt5-qtwebsockets
_pkgname=qtwebsockets-everywhere-src
pkgver=5.10.1
_ver=${pkgver/_p/-}
_ver=${_ver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=1
pkgdesc="Provides WebSocket communication compliant with RFC 6455"
url="http://qt-project.org/"
arch="all"
license="GPL-3.0"
makedepends="qt5-qtbase-dev"
subpackages="$pkgname-dev $pkgname-doc"
replaces="qt5-websockets"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
options="!check"
source="https://github.com/qt/$_pkgname/archive/v$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

prepare() {
	default_prepare
	cd "$builddir"
	mkdir -p build
}

build() {
	cd "$builddir"/build
	qmake-qt5 ..
	make
}

package() {
	cd "$builddir"/build
	make INSTALL_ROOT="$pkgdir" install

	# Install licenses
	install -d -m 0755 "$pkgdir"/usr/share/licenses/$pkgname
	install -m 0644 "$builddir"/LICENSE.* "$pkgdir"/usr/share/licenses/$pkgname
}

