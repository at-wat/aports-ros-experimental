# Maintainer: Daiki Maekawa <daikimaekawa29@gmail.com>
pkgname=py-grpcio
_pkgname=${pkgname#py-}
pkgver=1.26.0
pkgrel=0
pkgdesc="Package for gRPC Python."
url="https://grpc.io/"
arch="all"
license="Apache License 2.0"
depends="py-six>=1.5.2"
makedepends="python2-dev python3-dev py-setuptools cython-dev"
install=""
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/grpcio-${pkgver}"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py test
	python3 setup.py test
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	depends="$depends py-futures>=2.2.0 py-enum34>=1.0.4"
	_py python2
}

_py3() {
	depends="$depends py-futures>=3.6.8"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	install_if="$pkgname=$pkgver-$pkgrel $python"
	
	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir" || return 1
}
sha512sums="df3b6787449c202f3e70640907c76231dbbeb6b411167300ba8a53c17f7d45ffa513a81046a4a66a368f2c17c2d57a48a07cb236f44a005e4073bd5d8aa3865c  py-grpcio-1.26.0.tar.gz"
