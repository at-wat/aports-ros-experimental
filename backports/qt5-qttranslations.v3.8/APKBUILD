# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qttranslations
_pkgname=${pkgname/qt5-//}
pkgver=5.10.1
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - QtTranslations module"
url="http://qt-project.org/"
arch="noarch"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions and GFDL"
makedepends="qt5-qttools-dev"
subpackages="$pkgname-doc"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="https://github.com/qt/$_pkgname/archive/$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}
package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir"

	# Install licenses
	install -d -m 0755 "$pkgdir"/usr/share/licenses/$pkgname
	install -m 0644 "$builddir"/LICENSE.* "$pkgdir"/usr/share/licenses/$pkgname
}

sha512sums="ba20b576e6108c397c184abad22f2109057c2d83eb5c0bb8377349bbcdb28798cf0874983df99d30f55e3eca188a7449b0faf0ed98b8530a3b102cbc7d8c080b  qttranslations-everywhere-src-5.10.1.tar.xz"
