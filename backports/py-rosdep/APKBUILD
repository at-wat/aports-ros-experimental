# Maintainer:
pkgname=py-rosdep
_pkgname=rosdep
pkgver=0.18.0
pkgrel=0
pkgdesc="rosdep package manager abstraction tool for ROS"
url="https://pypi.python.org/pypi/rosdep/"
arch="all"
license="BSD-3-Clause"
depends="py-catkin-pkg>=0.4.0 py-rospkg>=1.1.10 py-rosdistro>=0.7.5 py-yaml>=3.1"
makedepends="python2-dev python3-dev py-setuptools git"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	depends="${depends//py-/py2-} py-setuptools"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-} py3-setuptools"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="45b91d02889996e3fceb397dd9941e36f96720881b6686c05b3c0f079551e2c8f339a5779fd01b21dade3dfa1ce0848e90d24be9f1f44ceee17e1cf37090c86b  rosdep-0.18.0.tar.gz"
