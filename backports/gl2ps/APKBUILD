# Contributor: Atsushi Watanabe <atsushi.w@ieee.org>
# Maintainer:
pkgname=gl2ps
pkgver=1.4.0
pkgrel=1
pkgdesc="GL2PS: an OpenGL to PostScript printing library"
url="http://geuz.org/gl2ps/"
arch="all"
options="!check"	# test is not provided
license="BSD-3-Clause"
makedepends="cmake mesa-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::http://geuz.org/$pkgname/src/$pkgname-$pkgver.tgz"
builddir="$srcdir/$pkgname-$pkgver-source"

build() {
  cd "$builddir"

  mkdir build && cd build

  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "$builddir"/build
  make DESTDIR="$pkgdir" install
}
sha512sums="420b21a5b4397c9a9a2323a8686b8635c2683354c94762d2d0172c661fc36c4298042498dd8ef2323adf32f45aa4e0a3dba146058ccde597e5a46c2027cbf7ce  gl2ps-1.4.0.tar.gz"
