# Contributor: Atsushi Watanabe <atsushi.w@ieee.org>
# Maintainer:
pkgname=ogre
pkgver=1.12.5
pkgrel=0
pkgdesc="OGRE is a scene-oriented, flexible 3D engine written in C++"
url="https://ogrecave.github.io/ogre/"
arch="all"
license="MIT"
depends=""
makedepends="cmake boost-dev freetype-dev pugixml-dev zziplib-dev zlib-dev mesa-dev glu-dev libxaw-dev libxt-dev libxrandr-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/OGRECave/ogre/archive/v$pkgver.tar.gz"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir -p build && cd build
	cmake .. \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS="$CXXFLAGS" \
		-DCMAKE_C_FLAGS="$CFLAGS -Wno-error" \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DOGRE_BUILD_TESTS=ON \
		-DOGRE_INSTALL_SAMPLES=OFF \
		-DOGRE_INSTALL_SAMPLES_SOURCE=OFF \
		-DOGRE_BUILD_DEPENDENCIES=OFF \
		-DOGRE_BUILD_COMPONENT_OVERLAY_IMGUI=OFF \
		-DBUILD_SHARED_LIBS=ON
	# Disabling imgui: https://github.com/OGRECave/ogre/issues/1332
	make
}

check() {
	cd "$builddir"/build
	make test
}

package() {
	cd "$builddir"/build
	make DESTDIR="$pkgdir" install
}
sha512sums="c7037c6224a2c3eff9aa0c07455b5f2bec6c74e57a42de897df07088819f50d26931d9ca7b10d1685c4202bf86056bd153a33e65409019737a7d36cda046c607  ogre-1.12.5.tar.gz"
