# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtgraphicaleffects
_pkgname=${pkgname/qt5-/}
pkgver=5.10.1
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=1
pkgdesc="Qt5 - QtGraphicalEffects component"
url="http://qt-project.org/"
arch="all"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
makedepends="qt5-qtbase-dev qt5-qtdeclarative-dev"
subpackages="$pkgname-doc"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="$_pkgname-$pkgver.tar.gz::https://github.com/qt/$_pkgname/archive/v$pkgver.tar.gz"

_qt5_prefix=/usr/lib/qt5
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	/usr/lib/qt5/bin/syncqt.pl -version $pkgver .
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir"

	# Install licenses
	install -d -m 0755 "$pkgdir"/usr/share/licenses/$pkgname
	install -m 0644 "$builddir"/LICENSE.* "$pkgdir"/usr/share/licenses/$pkgname
}

sha512sums="f62aba3ff7f1e189d89019b1bf215b75527cf5db594c83985dc7633d45f553a90925ae5c322845ac204c2feeb4066571f8f0f03ab77de9456d9b10d4d782bde8  qtgraphicaleffects-5.10.1.tar.gz"
