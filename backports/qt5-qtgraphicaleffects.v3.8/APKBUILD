# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtgraphicaleffects
_pkgname=${pkgname/qt5-//}
pkgver=5.10.1
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - QtGraphicalEffects component"
url="http://qt-project.org/"
arch="all"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
makedepends="qt5-qtbase-dev qt5-qtdeclarative-dev"
subpackages="$pkgname-doc"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="https://github.com/qt/$_pkgname/archive/$pkgver.tar.gz"

_qt5_prefix=/usr/lib/qt5
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir"

	# Install licenses
	install -d -m 0755 "$pkgdir"/usr/share/licenses/$pkgname
	install -m 0644 "$builddir"/LICENSE.* "$pkgdir"/usr/share/licenses/$pkgname
}

sha512sums="7dd015e551495bbb601e21b4ecd3ed846595b946534a10cd16e54397808b113356d9f231a468fcda315bcfeadb9c080ce57dcce10e32ee88eb8393bd73555772  qtgraphicaleffects-everywhere-src-5.10.1.tar.xz"
