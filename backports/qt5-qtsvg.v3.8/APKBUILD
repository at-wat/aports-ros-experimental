# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtsvg
_pkgname=${pkgname/qt5-/}
pkgver=5.10.1
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - Support for rendering and displaying SVG"
url="http://qt-project.org/"
arch="all"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
makedepends="qt5-qtbase-dev zlib-dev"
subpackages="$pkgname-dev $pkgname-doc"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="$_pkgname-$pkgver.tar.gz::https://github.com/qt/$_pkgname/archive/v$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir"

	# Install licenses
	install -d -m 0755 "$pkgdir"/usr/share/licenses/$pkgname
	install -m 0644 "$builddir"/LICENSE.* "$pkgdir"/usr/share/licenses/$pkgname
}

sha512sums="55085a8e25a5a1ac37326f4a6336dc26fbc1775fe8c1383cc23d350b935a108ccea1aa0c7d1d3697ca954e58c96a3c53ec32e5e3a96343517f92fc98ff292ba7  qtsvg-5.10.1.tar.gz"
